{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "Serilog": {
            "Using": [
                "Serilog.Sinks.Console",
                "Serilog.Sinks.File"
            ],
            "MinimumLevel": {
                "Default": "Information",
                "Override": {
                    "Microsoft": "Warning",
                    "System": "Warning",
                    "Microsoft.Hosting.Lifetime": "Information"
                }
            },
            "WriteTo": [
                {
                    "Name": "Console"
                },
                {
                    "Name": "File",
                    "Args": {
                        "path": "logs/log-.txt",
                        "rollingInterval": "Day",
                        "formatter": "Serilog.Formatting.Json.JsonFormatter"
                    }
                }
            ],
            "Enrich": [
                "FromLogContext",
                "WithMachineName",
                "WithProcessId",
                "WithThreadId",
                "WithEnvironmentName"
            ]
        }
    },
    "JWTConfiguration": {
        "SecretKey": "7c1e33d780725e19dfa38a8d2dfdc9bd",
        "Issuer": "SecureApi",
        "Audience": "SecureApiUser",
        "ExpirationInMinutes": 10
    },
    "Resend": {
        "ApiKey": ""
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "FoodStoreConnection": "Server=.;Database=FoodStoreDB;Trusted_Connection=True;TrustServerCertificate=True;",
        "IdentityConnection": "Server=.;Database=FoodStoreDB-Identity;Trusted_Connection=True;TrustServerCertificate=True;"
    }
}
