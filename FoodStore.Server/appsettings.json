{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "Serilog": {
            "Using": [
                "Serilog.Sinks.Console",
                "Serilog.Sinks.File"
            ],
            "MinimumLevel": {
                "Default": "Information",
                "Override": {
                    "Microsoft": "Warning",
                    "System": "Warning",
                    "Microsoft.Hosting.Lifetime": "Information"
                }
            },
            "WriteTo": [
                {
                    "Name": "Console"
                },
                {
                    "Name": "File",
                    "Args": {
                        "path": "logs/log-.txt",
                        "rollingInterval": "Day",
                        "formatter": "Serilog.Formatting.Json.JsonFormatter"
                    }
                }
            ],
            "Enrich": [
                "FromLogContext",
                "WithMachineName",
                "WithProcessId",
                "WithThreadId",
                "WithEnvironmentName"
            ]
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=DESKTOP-BTFQ43G\\SQLEXPRESS;Database=FoodStoreDB;Trusted_Connection=True;TrustServerCertificate=True;"
    }
}
